  border-radius: 8px;
  text-align: center;
  line-height: 64px;
}

.title-text{
  font-family: Univers Next for HSBC;
  font-weight: 300;
  font-size: 26px;
  line-height: 150%;
  color: #EDEDED 
}
.tips{
  font-family: 'Univers Next for HSBC';
